{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "UDX: New React TSX component",
      "type": "shell",
      "command": "npx",
      "args": [
        "tsx",
        "./dev/mts/create-udx-component.mts",
        "${input:folderName}",
        "${input:componentName}"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "UDX: New React TSX app",
      "type": "shell",
      "command": "npx",
      "args": [
        "tsx",
        "./dev/mts/create-udx-app.mts",
        "${input:appFolderName}",
        "${input:appName}"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "folderName",
      "description": "Name of the folder to create the UDX component",
      "default": "",
      "type": "promptString"
    },
    {
      "id": "componentName",
      "description": "Name of the UDX React component to create",
      "default": "",
      "type": "promptString"
    },
    {
      "id": "appFolderName",
      "description": "Name of the folder to create the UDX app",
      "default": "",
      "type": "promptString"
    },
    {
      "id": "appName",
      "description": "Name of the UDX React app to create",
      "default": "",
      "type": "promptString"
    }
  ]
}